<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".content.navigation.BlankFragment">

        <Button
            android:id="@+id/btn_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Fragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Dialog Fragment"
            app:layout_constraintTop_toBottomOf="@id/btn_action1"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_action3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action B (Another Navigation)"
            app:layout_constraintTop_toBottomOf="@id/btn_action2"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_action4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action DeepLink"
            app:layout_constraintTop_toBottomOf="@id/btn_action3"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_action5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action SharedElement"
            app:layout_constraintTop_toBottomOf="@id/btn_action4"
            app:layout_constraintStart_toStartOf="parent"/>



        <ImageView
            android:id="@+id/iv_transaction"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_transaction"
            android:transitionName="image_transaction"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="transaction" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>